<?xml version="1.0" encoding="utf-8"?>
<layout>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.RingActivity"
    android:background="#F6E6E8"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ring_activity_round_header"/>
<!--    <com.scwang.wave.MultiWaveHeader-->
<!--        android:id="@+id/waveHeader"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="450dp"-->
<!--        app:mwhStartColor="@color/Minosa"-->
<!--        app:mwhCloseColor="@color/purple_200"-->
<!--        android:layout_centerHorizontal="true"/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_main"
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:lottie_autoPlay="true"
            app:lottie_fileName="wakeup.json"
            app:lottie_loop="true"
            app:lottie_speed="1"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/txt_alarm_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Alarm"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:fontFamily="@font/coconutz"
            android:textSize="40dp"/>

        <Button
            android:id="@+id/btn_dimiss"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:padding="10dp"
            android:layout_gravity="center_horizontal"
            android:text="Dismiss"
            android:textColor="@color/white"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:fontFamily="@font/coconutz"
            android:background="@drawable/custome_button"
            android:textSize="24dp"/>
        <Button
            android:id="@+id/btn_snooze"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:text="Snooze"
            android:fontFamily="@font/coconutz"
            android:textColor="@color/white"
            android:background="@drawable/custome_button"
            android:textSize="24dp"/>
    </LinearLayout>


</FrameLayout>
</layout>